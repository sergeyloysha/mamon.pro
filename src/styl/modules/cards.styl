.cards
  &__list
    display: flex

  &__item
    width: 50%

.card
  border-radius: .4rem
  text-align: center
  cursor: pointer
  transition: box-shadow $tr.time $tr.func

  &:hover
    box-shadow: 0 0 10px 0 rgba(0,0,0,0.2)

    & ^[-1]__title
      color: $colors.blue

    & ^[-1]__movable
      transform: translateY(-1rem)

    & ^[-1]__link
      opacity: 1

  &__inner
    padding: 3rem 5rem

  &__icon
    svg
      display: block
      width: 100%

  &__movable
    padding-top: 3rem
    transition: transform $tr.time $tr.func

  &__title
    font-size: 2.2rem
    font-weight: 600
    transition: color $tr.time $tr.func
    margin-bottom: 1rem

  &__description
    font-size: 1.4rem
    color: rgba($colors.default, .5)
    min-height: 10rem
    margin-bottom: 2rem

  &__link
    display: flex
    justify-content: center
    align-items: center
    font-size: 1.8rem
    color: $colors.blue
    text-decoration: none
    opacity: 0
    transition: opacity $tr.time $tr.func

  &__arrow
    display: block
    width: 2.9rem
    height: .9rem
    fill: $colors.blue
    margin-left: 1rem
